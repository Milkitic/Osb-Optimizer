<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:OSBOptimizer.Avalonia.ViewModels"
             xmlns:avaloniaEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OSBOptimizer.Avalonia.Views.TaskView">

    <Design.DataContext>
        <viewModels:TaskViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*">
        <StackPanel Grid.ColumnSpan="2" Margin="8">
            <TextBlock Text="{Binding Name}"></TextBlock>
            <TextBlock Text="{Binding FilePath}"></TextBlock>
        </StackPanel>
        <Grid ColumnDefinitions="*,*" Grid.Row="1">
            <avaloniaEdit:TextEditor
                x:Name="TextEditor1"
                Grid.Column="0"
                FontFamily="Consolas"
                FontSize="13"
                Background="#404040">
            </avaloniaEdit:TextEditor>
            <avaloniaEdit:TextEditor
                x:Name="TextEditor2"
                Grid.Column="1"
                FontFamily="Consolas"
                FontSize="13"
                Background="#373737">
            </avaloniaEdit:TextEditor>
        </Grid>
    </Grid>

</UserControl>